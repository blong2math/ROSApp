<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.ros.com.rosapp" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".view.activity.SplashActivity"
            android:label="@string/title_activity_splash"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activity.MainActivity"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name=".view.activity.SearchableActivity"
            android:label="@string/title_activity_searchable"
            android:parentActivityName=".view.activity.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="app.ros.com.rosapp.view.activity.MainActivity" />
        </activity>

        <service
            android:name=".model.service.NotifyService"
            android:enabled="true"
            android:exported="true" >
        </service>

        <activity
            android:name=".view.activity.AccountActivity"
            android:label="@string/title_activity_acount"
            android:parentActivityName=".view.activity.MainActivity" >
        </activity>
        <activity
            android:name=".view.activity.DataActivity"
            android:label="@string/title_activity_data" >
        </activity>
    </application>

</manifest>
